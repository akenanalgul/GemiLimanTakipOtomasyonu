@using MVC_GemiLimanTakip5.Models.Entity
@model List<Gemiler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LimanLayout.cshtml";
}





<table id="tbl1" class="table table-dark">
    <thead>
        <tr>
            <th> LimanID</th>
            <th>SirketID</th>
            <th>Yük</th>
            <th>Yük Tonu</th>
            <th>Tonaj</th>
            <th>Mürettebat</th>
            <th>Bayrak</th>
            <th>Çıkış Tarihi</th>
            <th>Varış Tarihi</th>
            <th>Bulunduğu Liman</th>
            <th>Varacağı Liman</th>
            <th>Şirket Adı</th>
            <th>SİL</th>
            <th>GUNCELLE</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var gm in Model)
        {
            <tr>
                <td>@gm.Limanlar.Liman</td>
                <td>@gm.Sirketler.Sirket</td>
                <td>@gm.Yuk</td>
                <td>@gm.YukTonu</td>
                <td>@gm.Tonaj</td>
                <td>@gm.Murettebat</td>
                <td>@gm.Bayrak</td>
                <td>@gm.CikisTarihi</td>
                <td>@gm.VarisTarihi</td>
                <td>@gm.BulunduguLiman</td>
                <td>@gm.VaracagiLiman</td>
                <td>@gm.SirketID</td>
                @*<td><a href="/Gemiler/SIL/@gm.ID" class="btn btn-danger">SİL</a></td>*@
                <td><a href="/Gemiler/SIL/@gm.ID" class="btn btn-danger" onclick="return confirm('Silmek istediğinize emin misiniz?')">Sil</a></td>
                <td><a href="/Gemiler/GemiGetir/@gm.ID" class="btn btn-success">GÜNCELLE</a></td>

            </tr>
        }
    </tbody>

</table>
<a href="/Gemiler/YeniGemi" class="btn btn-primary">YENİ GEMİ EKLE</a>
<script type="text/javascript" src="https://cdn.datatables.net/v/bs-3.3.7/jq-2.2.4/jszip-3.1.3/pdfmake-0.1.27/dt-1.10.15/b-1.3.1/b-colvis-1.3.1/b-flash-1.3.1/b-html5-1.3.1/b-print-1.3.1/r-2.1.1/sc-1.4.2/se-1.2.2/datatables.min.js"></script>

<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<script>
    $(document).ready(function () {
        $('#tbl1').DataTable({
            language: {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Turkish.json"
            }
        });
    });
</script>

